@model RSSViewModel
@{
    ViewData["Title"] = "RSS";

    var category = Model.Category;
    var articleList = Model.ArticleList;
    var articleCount = Model.ArticleCount;
}

<h1>RSS</h1>
<p>
    Category: @category
    <br>
    Number of articles: @articleCount
</p>

<div class="rss-article-container">
    @for (int i = 0; i < articleCount; i++)
    {
        <a href="@articleList[i].Link" target="_blank" rel="noreferrer noopener">
            <div class="article">
                <div class="article-title">
                    <h2>@(articleList[i].Title)</h2>
                </div>
                <div class="article-summary">
                    <hr>
                    <p>@(articleList[i].Summary)</p>
                </div>
                <div class="article-image">
                    <img src="@(articleList[i].ImageLink)">
                </div>
            </div>
        </a>
    }
</div>